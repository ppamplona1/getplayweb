<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <ui:insert name="metadata"/>
        <f:event type="preRenderView" listener="#{userController.verifyUser()}" />
        <link href="resources/css/table-style.css" rel="stylesheet" type="text/css" />
    </h:head>
   
    <h:body>

        <ui:composition template="./mainTemplate.xhtml">

            <ui:define name ="content">

                
                <h:form>
                    <h:inputHidden value="#{musicPlaylistController.id}" id="playID" />
                    <h1><h:outputText value="#{musicPlaylistController.playlist.name}"/></h1>
                    <br />
                    
                   
                    <h:dataTable id="table2" value="#{musicPlaylistController.playlist.songs}" var="music"
                                 headerClass="person-table-header"
                                 rowClasses="person-table-odd-row,person-table-even-row"
                                 rendered="true">
                        <h:column>

                            <f:facet name="header">
                                Title
                            </f:facet>
                            #{music.title}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Artist
                            </f:facet>
                            #{music.artist}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Album
                            </f:facet>
                            #{music.album}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Release Year
                            </f:facet>
                            #{music.releaseYEAR}
                        </h:column>

                        <h:column>
                            <f:facet name="header">
                                Delete
                            </f:facet>
                            <h:commandButton id="removeMusic" value="DeleteMusic"  > 

                            </h:commandButton>
                        </h:column>


                    </h:dataTable>


                    <br />
                    


                </h:form>

                <h:form binding="#{musicController.addToPlaylistAll}" rendered="false">
                    <div align="right">
                        <p>Choose Playlist to copy</p>


                        <h:selectOneMenu value="#{musicController.selectedItem}" label="Playlists">

                            <f:selectItems value="#{playlistController.listOfPlaylists}"/>
                        </h:selectOneMenu>
                        <h:commandButton value="Copy" action="#{musicController.copyToplaylist}"/>

                    </div>
                </h:form>

            </ui:define>

        </ui:composition>
    </h:body>
</html>


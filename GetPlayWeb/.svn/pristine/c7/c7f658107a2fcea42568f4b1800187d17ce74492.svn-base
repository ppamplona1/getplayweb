<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <ui:insert name="metadata"/>
        <f:event type="preRenderView" listener="#{userController.verifyUser()}" />
        <link href="resources/css/table-style.css" rel="stylesheet" type="text/css" />
    </h:head>
    <h:body>
        
        <ui:composition template="./mainTemplate.xhtml">

            <ui:define name ="content">
                
                
                
                <h:form>
                    <h1><h:outputLabel value="#{musicController.numberOfResults}"/></h1>
                    <br />
                    
                    <h:dataTable id="table1" value="#{musicController.searchResults}" var="music"
                                 headerClass="person-table-header"
                                 rowClasses="person-table-odd-row,person-table-even-row">


                        <h:column>

                            <f:facet name="header">
                                Title
                            </f:facet>
                            #{music.title}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Artist
                            </f:facet>
                            #{music.artist}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Album
                            </f:facet>
                            #{music.album}
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                Release Year
                            </f:facet>
                            #{music.releaseYEAR}
                        </h:column>

                        <h:column>
                            <h:column>
                            <f:facet name="header">
                                Copy to Playlist
                            </f:facet>
                            <h:selectOneMenu value="#{musicController.selectedItem}" label="Playlists">
                                <f:selectItems value="#{playlistController.listOfPlaylists}"/>
                            </h:selectOneMenu>
                            <h:inputHidden value="#{musicController.musicID}"/>
                            <h:commandButton value="Copy" action="#{musicController.copyToplaylist}"/>
                        </h:column>

                    </h:dataTable>
                    <br/>
                    <h:outputLabel value="#{musicController.errorCopyingtoPlaylist}" style="color: red"/>
                    
                </h:form>
                
                <h:form binding="#{musicController.addToPlaylist}" rendered="false">
                    <div align="right">
                        <p>Choose Playlist to copy</p>
                                
                            
                            <h:selectOneMenu value="#{musicController.selectedItem}" label="Playlists">
                              
                                <f:selectItems value="#{playlistController.listOfPlaylists}"/>
                            </h:selectOneMenu>
                            <h:commandButton value="Copy" action="#{musicController.copyToplaylist}"/>
                            
                    </div>
                </h:form>

            </ui:define>



        </ui:composition>

    </h:body>
</html>


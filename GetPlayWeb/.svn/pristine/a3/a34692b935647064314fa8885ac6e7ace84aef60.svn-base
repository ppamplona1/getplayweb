<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <h:head>
        <title>Facelet Title</title>
        <link href="css/table-style.css" rel="stylesheet" type="text/css" />
    </h:head>
    <h:body>
        Hello from Facelets
        <h:form>
            <h:dataTable id="table1" value="#{MusicManagerBean.resultadosALLmusics}" var="item"
                         headerClass="person-table-header"
    		rowClasses="person-table-odd-row,person-table-even-row">
                
                
                <h:column>
                    
                    <f:facet name="header">
                        Title
                    </f:facet>
                    #{item.title}
                </h:column>
                <h:column>
                    <f:facet name="header">
                        Artist
                    </f:facet>
                    #{item.artist}
                </h:column>
                <h:column>
                    <f:facet name="header">
                        Album
                    </f:facet>
                    #{item.album}
                </h:column>
                <h:column>
                    <f:facet name="header">
                        Release Year
                    </f:facet>
                    #{item.releaseYEAR}
                </h:column>
                <h:column>
                    <h:selectOneMenu   id="userOption" required="true" value="#{playlistManagedBean.resultsMyPlaylists}" >
                    <f:selectItem itemValue="1" itemLabel="OPTIONS" noSelectionOption="true"/>
                    <f:selectItem itemValue="2" itemLabel="Edit your profile"  />
                    
                    </h:selectOneMenu>
                    
                </h:column>

            </h:dataTable>
            <h:commandButton value="Main Window" action="#{navigationManagedBean.mainWindow}"/>
        </h:form>
    </h:body>
</html>


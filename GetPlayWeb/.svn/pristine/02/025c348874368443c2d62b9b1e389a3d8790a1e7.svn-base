html{
    background-color: black;
}

body {
    
    font-size: 12px;
    font-family: Verdana, "Verdana CE",  Arial, "Arial CE", "Lucida Grande CE", lucida, "Helvetica CE", sans-serif;
    color: #000000;  
    margin: 10px;
}

h1 {
    font-family: Arial, "Arial CE", "Lucida Grande CE", lucida, "Helvetica CE", sans-serif;
    border-bottom: 2px #0099ff; 
    font-size:  30px;
    font-weight: bold;
    margin: 0px;
    padding: 0px;
    color:  #0099ff;
}

h2{
    font-family: Arial, "Arial CE", "Lucida Grande CE", lucida, "Helvetica CE", sans-serif;
    font-size: 50px;
    font-weight: bold;
    margin: 0px;
    padding: 0px;
    color:  #0099ff;
}

.loginLetters{
    font-family: Arial, "Arial CE", "Lucida Grande CE", lucida, "Helvetica CE", sans-serif;
    font-size:  20px;
    margin: 0px;
    padding: 10px;
    color:  #0099ff;
}


.buttonLogin{
  position: relative;
  display: inline-block;
  background: #0099ff;
  color: #fff;
  cursor: pointer;;

  padding: 5px 25px;
  margin: 10px 20px;

  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 700;

  border: none;
  outline: none;
    
  box-shadow: 0 4px grey;
  -webkit-box-shadow: 0 4px #2c4e50;
  -moz-box-shadow: 0 4px #2c4e50;
  -o-box-shadow: 0 4px #2c4e50;
  -ms-box-shadow: 0 4px #2c4e50;

  border-radius: 0 0 5px 5px;

}

.buttonLogin:hover{
  top: 2px;
  box-shadow: 0 4px grey;
  -webkit-box-shadow: 0 3px #2c4e50;
  -moz-box-shadow: 0 3px #2c4e50;
  -o-box-shadow: 0 3px #2c4e50;
  -ms-box-shadow: 0 3px #2c4e50;

}

.buttonLogin:active{
  top: 6px;
  box-shadow: 0 0px grey;
  -webkit-box-shadow: 0 0px #2c4e50;
  -moz-box-shadow: 0 0px #2c4e50;
  -o-box-shadow: 0 0px #2c4e50;
  -ms-box-shadow: 0 0px #2c4e50;

}

.full{
  width: 100%;
  height: 100%;
}
